<%= link_to "back",users_path%>
<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Location</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= image_tag @product.image,style: "width: 200px; display: block"%></td>
        <td><%= @product.title%></td>
        <td><%= @product.price%></td>
        <td><%= @product.description%></td>
        <td><%= @product.location%></td>
        <td><%= link_to "Edit", edit_product_path(@product)%></td>
        <td><%= link_to "Destroy",product_path(@product),data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }%></td>
      </tr>
  </tbody>
</table>